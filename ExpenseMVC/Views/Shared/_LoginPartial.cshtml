@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-nav d-flex align-items-center justify-content-between w-25">
@if (SignInManager.IsSignedIn(User))
{
    <span class="mx-sm-5">
        <a class="nav-link text-white pb-0 pt-0" asp-area="Identity"
           asp-page="/Account/Manage/Index" title="Manage">
            <i class="bi bi-person-circle fs-3"></i>
        </a>
    </span>
    <span class="text-danger fw-bold fs-3">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" 
               asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-danger">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </form>
    </span>
}
else
{
    @* <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li> *@
      <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</div>

